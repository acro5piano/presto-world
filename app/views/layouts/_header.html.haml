%nav.navbar.navbar-default.navbar-fixed-top
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle.collapsed{"aria-expanded" => "false",
                                      "data-target" => "#smartphone-navbar",
                                      "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar

      = link_to 'Presto', root_path, class: 'navbar-brand'
      = link_to '教師を探す', teachers_path, class: 'navbar-brand'

    #smartphone-navbar.collapse
      %ul.nav.navbar-nav.navbar-right
        - if !logged_in?
          %li
            %a.fb-register(href='#')
              %i.glyphicon.glyphicon-user
              Facebookで登録 / ログイン

        - if logged_in?
          %li
            = link_to 'プロフィール編集', edit_teacher_path(1)
          %li
            = link_to 'ログアウト', logout_path, class: 'fb-logout'

    .collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        - if !logged_in?
          %li
            %a.fb-register(href='#')
              %i.glyphicon.glyphicon-user
              Facebookで登録 / ログイン
        - if logged_in?
          %li.dropdown
            %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true",
                               "data-toggle" => "dropdown", :href => "#", :role => "button"}
              五所 和哉
              %span.caret
            %ul.dropdown-menu
              %li
                = link_to 'プロフィール編集', edit_teacher_path(1)
