%nav.navbar.navbar-default.navbar-fixed-top
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{"aria-expanded" => "false",
                                      "data-target" => "#smartphone-navbar",
                                      "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar

      = link_to 'Presto', root_path, class: 'navbar-brand'
      = link_to '教師を探す', users_path, class: 'navbar-brand'

    #smartphone-navbar.collapse
      %ul.nav.navbar-nav.navbar-right
        - if current_user
          %li
            = link_to 'プロフィール編集', profile_path
          %li
            = link_to 'ログアウト', logout_path, class: 'fb-logout'
        - else
          %li
            %a(href=login_path)
              %i.glyphicon.glyphicon-user
              新規登録 / ログイン

    .collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        - if current_user
          %li.dropdown
            %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true",
                               "data-toggle" => "dropdown", :href => "#", :role => "button"}
              = current_user.name
              %span.caret
            %ul.dropdown-menu
              %li
                = link_to 'プロフィール編集', profile_path
                = link_to 'ログアウト', logout_path, class: 'fb-logout'
        - else
          %li
            %a(href=login_path)
              %i.glyphicon.glyphicon-user
              新規登録 / ログイン
