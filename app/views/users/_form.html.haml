= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :age
    = f.number_field :age
  .field
    = f.label :educational_background
    = f.text_field :educational_background
  .field
    = f.label :vision
    = f.text_field :vision
  .field
    = f.label :strength
    = f.text_field :strength
  .field
    = f.label :shift_id
    = f.number_field :shift_id
  .actions
    = f.submit 'Save'
